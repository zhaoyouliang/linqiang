<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <include
        android:id="@+id/layout_title"
        layout="@layout/layout_title_bar" />

    <Button
        android:id="@+id/retailOutput"
        android:layout_marginTop="15dp"
        android:text="零售出库"
        app:layout_constraintTop_toBottomOf="@id/layout_title"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        style="@style/btn_menu_style" />

    <Button
        android:id="@+id/largeOutput"
        android:layout_marginTop="20dp"
        android:text="大货出库"
        app:layout_constraintTop_toBottomOf="@id/retailOutput"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        style="@style/btn_menu_style" />

    <Button
        android:id="@+id/transferOutput"
        android:layout_marginTop="20dp"
        android:text="调拨出库"
        app:layout_constraintTop_toBottomOf="@id/largeOutput"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        style="@style/btn_menu_style" />

    <Button
        android:id="@+id/scrapOutput"
        android:layout_marginTop="20dp"
        android:text="报废出库"
        app:layout_constraintTop_toBottomOf="@id/transferOutput"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        style="@style/btn_menu_style" />

    <Button
        android:id="@+id/otherOutput"
        android:layout_marginTop="20dp"
        android:text="其他出库"
        app:layout_constraintTop_toBottomOf="@id/scrapOutput"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        style="@style/btn_menu_style" />

</androidx.constraintlayout.widget.ConstraintLayout>