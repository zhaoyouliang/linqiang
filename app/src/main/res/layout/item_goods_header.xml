<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/img"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/goodsId"
        style="@style/goods_text_style"
        android:layout_marginTop="18dp"
        android:text=""
        app:layout_constraintLeft_toRightOf="@id/img"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/goodsName"
        style="@style/goods_text_style"
        android:layout_marginTop="5dp"
        app:layout_constraintLeft_toRightOf="@id/img"
        app:layout_constraintTop_toBottomOf="@id/goodsId" />

    <TextView
        android:id="@+id/goodsSex"
        style="@style/goods_text_style"
        android:layout_marginTop="5dp"
        app:layout_constraintLeft_toRightOf="@id/img"
        app:layout_constraintTop_toBottomOf="@id/goodsName" />

    <View
        android:id="@+id/view_line"
        style="@style/divide_line"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img" />

    <TextView
        android:id="@+id/goodsSize"
        style="@style/wrap_style"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:text="尺码"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_line" />

    <TextView
        android:id="@+id/goodsSum"
        style="@style/wrap_style"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:text="数量"
        app:layout_constraintLeft_toRightOf="@id/goodsSize"
        app:layout_constraintTop_toBottomOf="@id/view_line" />

    <TextView
        android:id="@+id/goodsLoc"
        style="@style/wrap_style"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:text="库位"
        app:layout_constraintLeft_toRightOf="@id/goodsSum"
        app:layout_constraintTop_toBottomOf="@id/view_line" />

    <View
        style="@style/divide_line"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/goodsSize" />


</androidx.constraintlayout.widget.ConstraintLayout>